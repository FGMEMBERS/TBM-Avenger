<PropertyList>

    <path>clock.ac</path>

    <animation>
        <type>material</type>
        <object-name>CLOCK.face</object-name>
        <object-name>CLOCK.hrhand</object-name>
        <object-name>CLOCK.mnhand</object-name>
        <object-name>CLOCK.schand</object-name>
        <emission>
            <red>0.8</red>
            <green>0.5</green>
            <blue>0.3</blue>
            <factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>CLOCK.schand</object-name>
        <property>/instrumentation/clock/indicated-sec</property>
        <factor>6</factor>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>CLOCK.mnhand</object-name>
        <property>/instrumentation/clock/indicated-sec</property>
        <factor>0.1</factor>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>CLOCK.hrhand</object-name>
        <property>/instrumentation/clock/indicated-sec</property>
        <factor>0.008333</factor>
        <axis>
            <x>-1.0</x>
            <y>0</y>
            <z>0.0</z>
        </axis>
    </animation>

<!-- Hotspots -->

    <animation>
        <type>pick</type>
        <object-name>CLOCK.knob.inc</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.1</interval-sec>
            <binding>
                <condition>
                    <not>
                        <property>devices/status/keyboard/shift</property>
                    </not>
                </condition>
                <command>property-adjust</command>
                <property>instrumentation/clock/offset-sec</property>
                <step>60</step>
                <min>-43200</min>
                <max>43200</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <condition>
                    <property>devices/status/keyboard/shift</property>
                </condition>
                <command>property-adjust</command>
                <property>instrumentation/clock/offset-sec</property>
                <step>600</step>
                <min>-43200</min>
                <max>43200</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>CLOCK.knob.dec</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.1</interval-sec>
            <binding>
                <condition>
                    <not>
                        <property>devices/status/keyboard/shift</property>
                    </not>
                </condition>
                <command>property-adjust</command>
                <property>instrumentation/clock/offset-sec</property>
                <step>-60</step>
                <min>-43200</min>
                <max>43200</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <condition>
                    <property>devices/status/keyboard/shift</property>
                </condition>
                <command>property-adjust</command>
                <property>instrumentation/clock/offset-sec</property>
                <step>-600</step>
                <min>-43200</min>
                <max>43200</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

</PropertyList>