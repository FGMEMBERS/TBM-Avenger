<?xml version="1.0" encoding="UTF-8"?>
<!-- 
     Sperry Model R-1 Pictorial Deviation Indicator
     based on picdev of Syd Adams
-->

<PropertyList>

  <path>pic-dev.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>back</object-name>
    <object-name>knob</object-name>
    <object-name>crs.set</object-name>
    <object-name>Annun</object-name>
    <object-name>pwr-off</object-name>
    <object-name>CrsNum.1</object-name>
    <object-name>CrsNum.2</object-name>
    <object-name>CrsNum.3</object-name>
    <object-name>compass</object-name>
    <object-name>crs</object-name>
    <object-name>nav-off</object-name>
    <object-name>pwr-off</object-name>
    <object-name>gs</object-name>
    <object-name>to-flag</object-name>
    <object-name>from-flag</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>CrsNum.1</object-name>
    <object-name>CrsNum.2</object-name>
    <object-name>CrsNum.3</object-name>
    <object-name>compass</object-name>
    <object-name>gs</object-name>
    <object-name>crs</object-name>
    <object-name>pwr-off</object-name>
    <object-name>nav-off</object-name>
    <object-name>to-flag</object-name>
    <object-name>from-flag</object-name>
    <emission>
      <factor-prop>controls/electric/battery-switch</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pwr-off</object-name>
    <condition>
      <less-than>
        <property>systems/electrical/outputs/nav</property>
        <value>5</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>nav-off</object-name>
    <condition>
      <not>
        <property>instrumentation/nav/data-is-valid</property>
      </not>
    </condition>
    <property>instrumentation/heading-indicator/indicated-heading-deg</property>
  </animation>

  <animation>
    <type>select</type>
    <object-name>to-flag</object-name>
    <condition>
      <property>instrumentation/nav/to-flag</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>from-flag</object-name>
    <condition>
      <property>instrumentation/nav/from-flag</property>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>compass</object-name>
    <object-name>crs</object-name>
    <object-name>to-flag</object-name>
    <object-name>from-flag</object-name>
    <object-name>nav-off</object-name>
    <property>instrumentation/heading-indicator/indicated-heading-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.006 </z-m>
    </center>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>compass</object-name>
    <object-name>crs</object-name>
    <object-name>to-flag</object-name>
    <object-name>from-flag</object-name>
    <object-name>nav-off</object-name>
    <property>instrumentation/nav/radials/selected-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.006 </z-m>
    </center>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>crs</object-name>
    <property>instrumentation/nav/heading-needle-deflection</property>
    <interpolation>
    <entry><ind> -10 </ind><dep> -0.0152 </dep></entry>
    <entry><ind>  10 </ind><dep>  0.0152 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.006 </z-m>
    </center>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>gs</object-name>
    <property>instrumentation/nav/gs-needle-deflection</property>
    <interpolation>
    <entry><ind> -10 </ind><dep> -0.0137 </dep></entry>
    <entry><ind>  10 </ind><dep>  0.0137 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.006 </z-m>
    </center>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>CrsNum.1</object-name>
    <property>instrumentation/nav/radials/selected-deg</property>
    <factor>0.001</factor>
    <step>100</step>
    <scroll>1</scroll>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>CrsNum.2</object-name>
    <property>instrumentation/nav/radials/selected-deg</property>
    <factor>0.01</factor>
    <step>10</step>
    <scroll>1</scroll>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>CrsNum.3</object-name>
    <property>instrumentation/nav/radials/selected-deg</property>
    <factor>0.1</factor>
    <step>1</step>
    <scroll>1</scroll>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Hotspots -->
  <animation>
    <type>pick</type>
    <object-name>crs.set</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <condition>
          <not>
            <property>devices/status/keyboard/shift</property>
          </not>
        </condition>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>1</step>
        <min>0</min>
        <max>359</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <condition>
          <property>devices/status/keyboard/shift</property>
        </condition>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>5</step>
        <min>0</min>
        <max>359</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>crs.set</object-name>
    <action>
      <button>1</button>
      <repeatable>true</repeatable>
      <interval-sec>0.2</interval-sec>
      <binding>
        <condition>
          <not>
            <property>devices/status/keyboard/shift</property>
          </not>
        </condition>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>359</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <condition>
          <property>devices/status/keyboard/shift</property>
        </condition>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>-5</step>
        <min>0</min>
        <max>359</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>crs.set</object-name>
    <action>
      <button>3</button>
      <binding>
        <condition>
          <not>
            <property>devices/status/keyboard/shift</property>
          </not>
        </condition>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>1</step>
        <min>0</min>
        <max>359</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <condition>
          <property>devices/status/keyboard/shift</property>
        </condition>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>5</step>
        <min>0</min>
        <max>359</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>crs.set</object-name>
    <action>
      <button>4</button>
      <binding>
        <condition>
          <not>
            <property>devices/status/keyboard/shift</property>
          </not>
        </condition>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>359</max>
        <wrap>1</wrap>
      </binding>
      <binding>
        <condition>
          <property>devices/status/keyboard/shift</property>
        </condition>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>-5</step>
        <min>0</min>
        <max>359</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>

</PropertyList>

