<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>flaps-slats-indicator.ac</path>

  <animation>
    <name>flaps-slats-indicator</name>
    <object-name>mount</object-name>
    <object-name>flaps</object-name>
    <object-name>lw-down</object-name>
    <object-name>lw-unsafe</object-name>
    <object-name>lw-up</object-name>
    <object-name>slats-maneuver</object-name>
    <object-name>slats-extended</object-name>
    <object-name>slats-in</object-name>
    <object-name>sp-power-off</object-name>
    <object-name>sp-full</object-name>
    <object-name>sp-partial</object-name>
    <object-name>sp-in</object-name>
    <object-name>rw-down</object-name>
    <object-name>rw-unsafe</object-name>
    <object-name>rw-up</object-name>
    <object-name>nw-down</object-name>
    <object-name>nw-unsafe</object-name>
    <object-name>nw-up</object-name>
  </animation>

  <animation>
    <name>symbols</name>
    <object-name>flaps</object-name>
    <object-name>lw-down</object-name>
    <object-name>lw-unsafe</object-name>
    <object-name>lw-up</object-name>
    <object-name>slats-maneuver</object-name>
    <object-name>slats-extended</object-name>
    <object-name>slats-in</object-name>
    <object-name>sp-power-off</object-name>
    <object-name>sp-full</object-name>
    <object-name>sp-partial</object-name>
    <object-name>sp-in</object-name>
    <object-name>rw-down</object-name>
    <object-name>rw-unsafe</object-name>
    <object-name>rw-up</object-name>
    <object-name>nw-down</object-name>
    <object-name>nw-unsafe</object-name>
    <object-name>nw-up</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>mount</object-name>
    <object-name>symbols</object-name>
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>controls/electric/battery-switch</factor-prop>
    </emission>
  </animation>

  <!-- Flaps -->
  <animation>
    <type>rotate</type>
    <object-name>flaps</object-name>
    <property>surface-positions/flaps-pos-norm</property>
    <factor>90</factor>
    <center>
      <x-m> 0.0000 </x-m>
      <y-m> 0.0200 </y-m>
      <z-m> 0.0182 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Slats -->
  <animation> 
    <type>select</type>
    <object-name>slats-in</object-name>
    <condition>
      <equals>
        <property>surface-positions/slats-pos-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation> 
    <type>select</type>
    <object-name>slats-extended</object-name>
    <condition>
      <equals>
        <property>surface-positions/slats-pos-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <!-- Landing Gear -->
  <animation> 
    <type>select</type>
    <object-name>lw-up</object-name>
    <condition>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation> 
    <type>select</type>
    <object-name>lw-down</object-name>
    <condition>
      <equals>
      <property>gear/gear[0]/position-norm</property>
      <value>1</value>
      </equals>    <object-name>symbols</object-name>

    </condition>
  </animation>

  <animation> 
    <type>select</type>
    <object-name>nw-up</object-name>
    <condition>
      <equals>
        <property>gear/gear[1]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation> 
    <type>select</type>
    <object-name>nw-down</object-name>
    <condition>
      <equals>
        <property>gear/gear[1]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation> 
    <type>select</type>
    <object-name>rw-up</object-name>
    <condition>
      <equals>
        <property>gear/gear[2]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation> 
    <type>select</type>
    <object-name>rw-down</object-name>
    <condition>
      <equals>
        <property>gear/gear[2]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <!-- Speed Brake/ -->
  <animation> 
    <type>select</type>
    <object-name>sp-in</object-name>
    <condition>
      <equals>
        <property>surface-positions/speedbrake-pos-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation> 
    <type>select</type>
    <object-name>sp-full</object-name>
    <condition>
      <equals>
        <property>surface-positions/speedbrake-pos-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation> 
    <type>select</type>
    <object-name>sp-partial</object-name>
    <condition>
      <greater-than>
        <property>surface-positions/speedbrake-pos-norm</property>
        <value>0</value>
      </greater-than>
      <less-than>
        <property>surface-positions/speedbrake-pos-norm</property>
        <value>1</value>
      </less-than>
    </condition>
  </animation>

</PropertyList>

