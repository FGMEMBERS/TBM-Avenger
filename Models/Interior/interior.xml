<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>interieur2</object-name>
    <object-name>soute</object-name>
    <object-name>dos</object-name>
    <object-name>inttour</object-name>
    <object-name>inttour2</object-name>
    <object-name>inttourfer</object-name>
    <object-name>inttoursous</object-name>
    <object-name>intbaieG1</object-name>
    <object-name>intbaieG2</object-name>
    <object-name>intbaieD1</object-name>
    <object-name>intbaieD2</object-name>
    
    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>inttourverre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/TBM-Avenger/Models/Effects/Glass/glass</inherits-from>
    <object-name>intverriere</object-name>
    <object-name>inttourverre</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intverriere</object-name>
    <object-name>inttourverre</object-name>
  </effect>
  
  <model>
    <path>Aircraft/TBM-Avenger/Models/Interior/seat/seat.xml</path>
    <offsets>
      <x-m> -1.300 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.410 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/TBM-Avenger/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.489 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.410 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/TBM-Avenger/Models/Pilot/radioman.xml</path>
    <offsets>
      <x-m> -1.500 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.410 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/TBM-Avenger/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.076 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.419 </z-m>
    </offsets>
  </model>

  <!-- Soute Ã  bombes -->
  <animation>
    <name>IntBaieG</name>
    <object-name>intbaieG1</object-name>
    <object-name>intbaieG2</object-name>
  </animation>
  
  <animation>
    <name>IntBaieD</name>
    <object-name>intbaieD1</object-name>
    <object-name>intbaieD2</object-name>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>IntBaieG</object-name>
    <object-name>IntBaieD</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntBaieG</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> -70 </factor>
    <center>
      <x-m> -1.395 </x-m>
      <y-m> -0.605 </y-m>
      <z-m> -0.904 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>intbaieG2</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> 85 </factor>
    <center>
      <x-m> -1.267 </x-m>
      <y-m> -0.354 </y-m>
      <z-m> -1.146 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntBaieD</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> 70 </factor>
    <center>
      <x-m> -1.395 </x-m>
      <y-m>  0.605 </y-m>
      <z-m> -0.904 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>intbaieD2</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> -85 </factor>
    <center>
      <x-m> -1.267 </x-m>
      <y-m>  0.354 </y-m>
      <z-m> -1.146 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
</PropertyList>
